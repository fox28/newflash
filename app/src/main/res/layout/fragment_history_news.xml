<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.isuhuo.newflash.ui.fragment.HistoryNewsFragment">


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        ptr:ptrDrawable="@mipmap/update_xlist"
        ptr:ptrHeaderTextColor="#a2a2a2"
        android:background="#fff"
        android:overScrollMode="never"
        android:divider="@null"
        ptr:ptrShowIndicator="false"
        android:id="@+id/jiankang_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <LinearLayout
        android:id="@+id/bainjiLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="2"
        android:background="@color/pop_btn_stoke_color"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/yjqkTv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="一键清空"
            android:textColor="@color/level1"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:paddingLeft="6dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/delTv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="删除"
            android:textColor="@color/view"
            android:layout_gravity="center"
            android:gravity="right|center_vertical"
            android:paddingRight="6dp"/>

    </LinearLayout>
</FrameLayout>
