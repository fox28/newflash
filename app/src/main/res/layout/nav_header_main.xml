<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:orientation="vertical">
    <!--已登录状态的显示控件-->
    <!--android:background="@drawable/side_nav_bar"-->
    <LinearLayout
        android:id="@+id/dengluLinear"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <com.isuhuo.newsflash.view.MyImageView
            android:id="@+id/touxiangIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:layout_gravity="left|center_vertical|"
            />
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="djkkljsdkfl"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textColor="@color/cl_default"
            android:textSize="16sp"
            />
    </LinearLayout>
    <!--未登录状态-->
    <LinearLayout
        android:id="@+id/weidenglLinear"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_weight="3"
        android:visibility="visible"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/wxIv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:src="@mipmap/umeng_socialize_sina_on"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="微博登录"
                android:textColor="@color/cl_default"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/QQIv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:src="@mipmap/umeng_socialize_qq_on"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="QQ登录"
                android:textColor="@color/cl_default"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sjIv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@android:drawable/sym_def_app_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="手机登录"
                android:textColor="@color/cl_default"/>
        </LinearLayout>
    </LinearLayout>
    <!--历史记录、我的收藏、系统设置-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <!--<View-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:layout_marginEnd="5dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:background="@color/mgray"/>-->

        <TextView
            android:id="@+id/historyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:background="@color/white"
            android:text="历史记录"
            android:textColor="@color/cl_default"
            android:textSize="16sp"
            android:drawableEnd="@mipmap/next"
            android:paddingEnd="30dp"
            />

        <TextView
            android:id="@+id/myshcTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginTop="2dp"
            android:text="我的收藏"
            android:textColor="@color/cl_default"
            android:textSize="16sp"
            android:drawableEnd="@mipmap/next"
            android:paddingEnd="30dp"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/xtszTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_marginTop="2dp"
            android:text="系统设置"
            android:textColor="@color/cl_default"
            android:textSize="16sp"
            android:drawableEnd="@mipmap/next"
            android:paddingEnd="30dp"
            android:background="@color/white"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6DCDC"/>
    </LinearLayout>




</LinearLayout>
